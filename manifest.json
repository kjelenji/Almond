{
  "name": "Almond",
  "description": "Making web browsing easy and simple.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Almond",
    "default_popup": "popup.html"
    
  },
  "permissions": ["activeTab", "storage", "geolocation", "notifications", "tabs", "scripting", "downloads", "ai"],
  "host_permissions": ["<all_urls>"],
  "trial_tokens": [
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-font-injector.js", "scripts/content-simple.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
   "16": "images/almond.png",
   "32": "images/almond.png",
   "48": "images/almond.png",
   "128": "images/almond.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
